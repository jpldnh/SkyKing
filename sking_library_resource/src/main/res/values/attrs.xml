<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- -->
    <declare-styleable name="SKR_CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!-- -->
    <declare-styleable name="SKR_GalleryView">
        <attr name="android:galleryItemBackground" />
    </declare-styleable>

    <!--侧滑删除-->
    <declare-styleable name="SKR_ScrollLinarLayoutView">
        <attr name="frame_scrolloffset" format="dimension" />
    </declare-styleable>

    <!--自定义滑动选择器-->
    <declare-styleable name="SKR_AttrsWheelView">

        <attr name="gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="textColorOut" format="color"/>
        <attr name="textSizeOut" format="dimension"/>
        <attr name="textColorCenter" format="color"/>
        <attr name="textSizeCenter" format="dimension"/>
        <attr name="dividerColor" format="color" />
        <attr name="itemcount"  format="integer" />

    </declare-styleable>

</resources>