<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_content"
    android:orientation="vertical">

    <include layout="@layout/skr_layout_top_title_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ac_setting_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_clickable"
                android:drawableRight="@mipmap/skr_img_arrow_right"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="修改密码"
                android:textColor="@color/color_text_gray_g"
                android:textSize="@dimen/textsize_8" />

            <View style="@style/SKR_Style_LineView" />

            <TextView
                android:id="@+id/ac_setting_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_clickable"
                android:drawableRight="@mipmap/skr_img_arrow_right"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="关于我们"
                android:textColor="@color/color_text_gray_g"
                android:textSize="@dimen/textsize_8" />

            <View style="@style/SKR_Style_LineView" />

            <TextView
                android:id="@+id/ac_setting_advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_clickable"
                android:drawableRight="@mipmap/skr_img_arrow_right"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="意见反馈"
                android:textColor="@color/color_text_gray_g"
                android:textSize="@dimen/textsize_8" />

            <View style="@style/SKR_Style_LineView" />

            <TextView
                android:id="@+id/ac_setting_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_clickable"
                android:drawableRight="@mipmap/skr_img_arrow_right"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="软件更新"
                android:textColor="@color/color_text_gray_g"
                android:textSize="@dimen/textsize_8" />

            <Button
                android:id="@+id/ac_setting_exit"
                style="@style/SKR_Style_Button_Theme"
                android:layout_height="42dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/skr_bg_button_red"
                android:text="退出登录" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>