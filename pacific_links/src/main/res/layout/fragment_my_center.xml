<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_content"
    android:orientation="vertical">

    <include layout="@layout/skr_layout_top_title_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/center_top_frame"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_white_clickable">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher" />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_clickable"
                android:drawableRight="@mipmap/skr_img_arrow_right"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:text="我的积分"
                android:textColor="@color/color_text_gray_g"
                android:textSize="@dimen/textsize_8" />

            <View style="@style/SKR_Style_LineView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_clickable"
                android:drawableRight="@mipmap/skr_img_arrow_right"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="我的收藏"
                android:textColor="@color/color_text_gray_g"
                android:textSize="@dimen/textsize_8" />

            <View style="@style/SKR_Style_LineView" />

            <TextView
                android:id="@+id/ac_center_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_clickable"
                android:drawableRight="@mipmap/skr_img_arrow_right"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="设置"
                android:textColor="@color/color_text_gray_g"
                android:textSize="@dimen/textsize_8" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>